<% if @user.errors.any? %>
  <div id = "error_explanation">
    <div class = "alert alert-danger">
<!--       pluralizeという英語専用のテキストヘルパー-->
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
